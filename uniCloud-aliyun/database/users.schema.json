{
  "bsonType": "object",
  "required": ["openid"],
  "permission": {
    "read": true,
    "create": false,
    "update": false,
    "delete": false
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "openid": {
      "bsonType": "string",
      "description": "微信openid",
      "title": "openid"
    },
    "unionid": {
      "bsonType": "string",
      "description": "微信unionid",
      "title": "unionid"
    },
    "nickname": {
      "bsonType": "string",
      "description": "用户昵称",
      "title": "昵称"
    },
    "avatar": {
      "bsonType": "string",
      "description": "头像地址",
      "title": "头像"
    },
    "status": {
      "description": "用户头像",
      "title": "头像",
      "pattern": "^(http|https)://.+"
    },
    "bio": {
      "bsonType": "string",
      "description": "个人简介",
      "title": "简介",
      "maxLength": 200,
      "defaultValue": ""
    },
    "gender": {
      "bsonType": "int",
      "description": "性别：0 未知 1 男性 2 女性",
      "title": "性别",
      "minimum": 0,
      "maximum": 2,
      "defaultValue": 0
    },
    "birthday": {
      "bsonType": "date",
      "description": "生日",
      "title": "生日"
    },
    "region": {
      "bsonType": "array",
      "description": "地区",
      "title": "地区"
    },
    "level": {
      "bsonType": "int",
      "description": "用户等级",
      "title": "等级",
      "minimum": 1,
      "defaultValue": 1
    },
    "foodPreferences": {
      "bsonType": "array",
      "description": "美食偏好",
      "title": "美食偏好",
      "maxItems": 5
    },
    "cookingSkills": {
      "bsonType": "array",
      "description": "烹饪技能",
      "title": "烹饪技能",
      "maxItems": 5
    },
    "worksCount": {
      "bsonType": "int",
      "description": "作品数量",
      "title": "作品数",
      "defaultValue": 0
    },
    "followersCount": {
      "bsonType": "int",
      "description": "粉丝数量",
      "title": "粉丝数",
      "defaultValue": 0
    },
    "followingCount": {
      "bsonType": "int",
      "description": "关注数量",
      "title": "关注数",
      "defaultValue": 0
    },
    "create_date": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "defaultValue": {
        "$env": "now"
      }
    }
  }
} 