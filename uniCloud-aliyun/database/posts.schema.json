{
  "bsonType": "object",
  "required": ["user_id", "title"],
  "permission": {
    "read": true,
    "create": true,
    "update": "doc.user_id == auth.uid",
    "delete": "doc.user_id == auth.uid"
  },
  "properties": {
    "_id": {
      "description": "存储文档 ID，系统自动生成"
    },
    "user_id": {
      "bsonType": "string",
      "description": "发布者ID",
      "foreignKey": "users._id"
    },
    "title": {
      "bsonType": "string",
      "description": "标题",
      "maxLength": 100
    },
    "description": {
      "bsonType": "string",
      "description": "描述",
      "maxLength": 500
    },
    "images": {
      "bsonType": "array",
      "description": "图片列表",
      "maxItems": 9,
      "items": {
        "bsonType": "string",
        "description": "图片链接"
      }
    },
    "likeCount": {
      "bsonType": "int",
      "description": "点赞数",
      "minimum": 0,
      "defaultValue": 0
    },
    "commentCount": {
      "bsonType": "int",
      "description": "评论数",
      "minimum": 0,
      "defaultValue": 0
    },
    "collectCount": {
      "bsonType": "int",
      "description": "收藏数",
      "minimum": 0,
      "defaultValue": 0
    },
    "status": {
      "bsonType": "int",
      "description": "帖子状态：0-草稿，1-已发布",
      "minimum": 0,
      "maximum": 1,
      "defaultValue": 1
    },
    "create_date": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "defaultValue": {
        "$env": "now"
      }
    },
    "update_date": {
      "bsonType": "timestamp",
      "description": "更新时间",
      "defaultValue": {
        "$env": "now"
      }
    }
  }
} 