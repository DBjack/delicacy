.container {
  padding-bottom: 120rpx;
}
.post-content {
  background: #fff;
  padding: 30rpx;
}
.post-content .author {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.post-content .author .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.post-content .author .info {
  flex: 1;
}
.post-content .author .info .nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}
.post-content .author .info .time {
  font-size: 24rpx;
  color: #999;
}
.post-content .author .follow-btn {
  width: 120rpx;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  color: #fff;
  background: #ff6b6b;
  border-radius: 26rpx;
  padding: 0;
  margin: 0;
}
.post-content .author .follow-btn.following {
  background: #f5f5f5;
  color: #999;
}
.post-content .title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}
.post-content .description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}
.post-content .images {
  margin-bottom: 30rpx;
}
.post-content .images image {
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}
.post-content .images image:last-child {
  margin-bottom: 0;
}
.post-content .tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.post-content .tags .tag {
  font-size: 24rpx;
  color: #ff6b6b;
  background: rgba(255, 107, 107, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}
.post-content .location {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}
.post-content .location .iconfont {
  margin-right: 8rpx;
}
.comments {
  margin-top: 20rpx;
  background: #fff;
  padding: 30rpx;
}
.comments .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}
.comments .comment-list .comment-item {
  display: flex;
  margin-bottom: 30rpx;
}
.comments .comment-list .comment-item .avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.comments .comment-list .comment-item .content {
  flex: 1;
}
.comments .comment-list .comment-item .content .nickname {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}
.comments .comment-list .comment-item .content .text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}
.comments .comment-list .comment-item .content .time {
  font-size: 24rpx;
  color: #999;
}
.comments .empty {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}
.action-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.action-bar .comment-input {
  flex: 1;
  margin-right: 30rpx;
}
.action-bar .comment-input input {
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.action-bar .actions {
  display: flex;
  align-items: center;
}
.action-bar .actions .action-item {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
}
.action-bar .actions .action-item .iconfont {
  font-size: 40rpx;
  color: #999;
  margin-right: 8rpx;
}
.action-bar .actions .action-item .iconfont.icon-like-fill, .action-bar .actions .action-item .iconfont.icon-star-fill {
  color: #ff6b6b;
}
.action-bar .actions .action-item .count {
  font-size: 24rpx;
  color: #999;
}

