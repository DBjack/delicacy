.expert {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.expert .search-bar {
  background-color: #fff;
  padding: 20rpx 30rpx;
}
.expert .search-bar .search-box {
  background-color: #f5f5f5;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.expert .search-bar .search-box .icon-search {
  font-size: 32rpx;
  color: #999;
  margin-right: 10rpx;
}
.expert .search-bar .search-box .placeholder {
  font-size: 28rpx;
  color: #999;
}
.expert .tabs {
  display: flex;
  background-color: #fff;
  padding: 30rpx;
}
.expert .tabs .tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}
.expert .tabs .tab-item.active {
  color: #07c160;
  font-weight: bold;
}
.expert .tabs .tab-item.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: -10rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07c160;
  border-radius: 2rpx;
}
.expert .expert-list {
  padding: 20rpx;
}
.expert .expert-list .expert-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}
.expert .expert-list .expert-item .avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.expert .expert-list .expert-item .info {
  flex: 1;
  margin-right: 20rpx;
}
.expert .expert-list .expert-item .info .name-wrap {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}
.expert .expert-list .expert-item .info .name-wrap .name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-right: 10rpx;
}
.expert .expert-list .expert-item .info .name-wrap .verified-icon {
  width: 32rpx;
  height: 32rpx;
}
.expert .expert-list .expert-item .info .bio {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
}
.expert .expert-list .expert-item .info .stats {
  display: flex;
}
.expert .expert-list .expert-item .info .stats .stat-item {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}
.expert .expert-list .expert-item .follow-btn {
  min-width: 140rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  background-color: #07c160;
  border-radius: 28rpx;
  padding: 0 30rpx;
}
.expert .expert-list .expert-item .follow-btn.following {
  background-color: #f5f5f5;
  color: #666;
}

