.recipe {
  min-height: 100vh;
  background-color: #f5f5f5;
}
.recipe .search-bar {
  background-color: #fff;
  padding: 20rpx 30rpx;
}
.recipe .search-bar .search-box {
  background-color: #f5f5f5;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.recipe .search-bar .search-box .icon-search {
  font-size: 32rpx;
  color: #999;
  margin-right: 10rpx;
}
.recipe .search-bar .search-box .placeholder {
  font-size: 28rpx;
  color: #999;
}
.recipe .categories {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
}
.recipe .categories .category-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}
.recipe .categories .category-item .icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin-bottom: 10rpx;
}
.recipe .categories .category-item .name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 6rpx;
}
.recipe .categories .category-item .count {
  font-size: 20rpx;
  color: #999;
}
.recipe .section {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 30rpx;
}
.recipe .section .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.recipe .section .section-header .title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}
.recipe .section .section-header .more {
  font-size: 24rpx;
  color: #666;
}

