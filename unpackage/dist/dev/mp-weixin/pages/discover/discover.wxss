.container {
  padding: 20rpx;
}
.search-box {
  padding: 20rpx 0;
}
.search-box .search-bar {
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
}
.search-box .search-bar .iconfont {
  font-size: 32rpx;
  color: #999;
  margin-right: 10rpx;
}
.search-box .search-bar .placeholder {
  font-size: 28rpx;
  color: #999;
}
.section {
  margin-bottom: 30rpx;
}
.section .section-header {
  margin-bottom: 20rpx;
}
.section .section-header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.tags-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}
.tags-list .tag-item {
  margin: 10rpx;
  padding: 16rpx 24rpx;
  background: #f8f8f8;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
}
.tags-list .tag-item .tag-name {
  font-size: 26rpx;
  color: #333;
  margin-right: 10rpx;
}
.tags-list .tag-item .tag-count {
  font-size: 24rpx;
  color: #999;
}
.post-list .post-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.post-list .post-item .cover {
  width: 100%;
  height: 360rpx;
}
.post-list .post-item .info {
  padding: 20rpx;
}
.post-list .post-item .info .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.post-list .post-item .info .description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.post-list .post-item .info .meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.post-list .post-item .info .meta .author {
  display: flex;
  align-items: center;
}
.post-list .post-item .info .meta .author .avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.post-list .post-item .info .meta .author .nickname {
  font-size: 26rpx;
  color: #666;
}
.post-list .post-item .info .meta .stats {
  display: flex;
  align-items: center;
}
.post-list .post-item .info .meta .stats .stat {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
.post-list .post-item .info .meta .stats .stat:first-child {
  margin-left: 0;
}

