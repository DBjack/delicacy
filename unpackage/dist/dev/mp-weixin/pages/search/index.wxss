.container {
  min-height: 100vh;
  background: #f8f8f8;
}
.search-box {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100;
}
.search-box .search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}
.search-box .icon-clear {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 36rpx;
}
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx 20rpx;
}
.section-header .title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}
.section-header .clear-all {
  font-size: 26rpx;
  color: #999;
  padding: 10rpx;
}
.history-list {
  padding: 0 20rpx;
}
.history-list .history-item {
  display: flex;
  align-items: center;
  height: 88rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.history-list .history-item .icon-time {
  font-size: 32rpx;
  color: #999;
  margin-right: 12rpx;
}
.history-list .history-item .keyword {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
.history-list .history-item .delete-btn {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 36rpx;
}
.hot-list {
  padding: 0 20rpx;
}
.hot-list .hot-item {
  display: flex;
  align-items: center;
  height: 88rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.hot-list .hot-item .rank {
  width: 40rpx;
  font-size: 28rpx;
  color: #999;
  text-align: center;
}
.hot-list .hot-item .rank.top {
  color: #ff6b6b;
  font-weight: bold;
}
.hot-list .hot-item .keyword {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  margin-left: 20rpx;
}
.search-results {
  height: calc(100vh - 112rpx);
}
.result-list {
  padding: 20rpx;
}
.result-list .result-item {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}
.result-list .result-item .cover {
  width: 100%;
  height: 360rpx;
}
.result-list .result-item .info {
  padding: 20rpx;
}
.result-list .result-item .info .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}
.result-list .result-item .info .description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.result-list .result-item .info .meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.result-list .result-item .info .meta .author {
  display: flex;
  align-items: center;
}
.result-list .result-item .info .meta .author .avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
}
.result-list .result-item .info .meta .author .nickname {
  font-size: 26rpx;
  color: #666;
}
.result-list .result-item .info .meta .likes {
  font-size: 24rpx;
  color: #999;
}
.empty-result {
  padding: 120rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty-result .empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}
.empty-result .empty-text {
  font-size: 28rpx;
  color: #999;
}
.history .header .title .iconfont {
  font-size: 28rpx;
  margin-right: 8rpx;
}
.history .header .clear .iconfont {
  font-size: 28rpx;
  margin-right: 8rpx;
}

