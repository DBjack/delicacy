.container {
  padding: 20rpx;
}
.search-box {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.search-box .search-bar {
  flex: 1;
  display: flex;
  align-items: center;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
}
.search-box .search-bar .icon-search {
  font-size: 32rpx;
  color: #999;
  margin-right: 10rpx;
}
.search-box .search-bar .search-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}
.search-box .search-bar .clear-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
}
.search-box .cancel-btn {
  font-size: 28rpx;
  color: #666;
}
.history .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.history .header .title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.history .header .clear {
  font-size: 24rpx;
  color: #999;
}
.history .history-list .history-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.history .history-list .history-item .icon-time {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}
.history .history-list .history-item .keyword {
  font-size: 28rpx;
  color: #333;
}
.result-list .empty {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}
.result-list .result-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}
.result-list .result-item .cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}
.result-list .result-item .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.result-list .result-item .info .title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.result-list .result-item .info .desc {
  font-size: 26rpx;
  color: #999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

