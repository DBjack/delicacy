.container {
  padding-top: 88rpx;
}
.tabs {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.tabs .tab-item {
  padding: 0 40rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #666;
  position: relative;
}
.tabs .tab-item.active {
  color: #333;
  font-weight: bold;
}
.tabs .tab-item.active::after {
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  background: #ff6b6b;
  border-radius: 3rpx;
}
.post-list {
  padding: 20rpx;
}
.post-list .post-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}
.post-list .post-item .author {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.post-list .post-item .author .avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}
.post-list .post-item .author .nickname {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}
.post-list .post-item .author .time {
  font-size: 24rpx;
  color: #999;
}
.post-list .post-item .content .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}
.post-list .post-item .content .description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.post-list .post-item .content .images {
  display: flex;
  gap: 10rpx;
}
.post-list .post-item .content .images image {
  flex: 1;
  height: 200rpx;
  border-radius: 8rpx;
}
.post-list .post-item .actions {
  display: flex;
  margin-top: 20rpx;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 20rpx;
}
.post-list .post-item .actions .action-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
}
.post-list .post-item .actions .action-item .iconfont {
  font-size: 36rpx;
  margin-right: 8rpx;
}
.post-list .post-item .actions .action-item .count {
  font-size: 24rpx;
}

