.container {
  min-height: 100vh;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
}
.category-scroll {
  background: #fff;
  padding: 20rpx 0;
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  flex-shrink: 0;
}
.category-scroll .category-list {
  display: flex;
  padding: 0 20rpx;
  white-space: nowrap;
}
.category-scroll .category-list .category-item {
  padding: 12rpx 32rpx;
  margin-right: 20rpx;
  background: #f5f5f5;
  border-radius: 32rpx;
  transition: all 0.3s ease;
}
.category-scroll .category-list .category-item.active {
  background: #ff6b6b;
}
.category-scroll .category-list .category-item.active .category-name {
  color: #fff;
}
.category-scroll .category-list .category-item:active {
  -webkit-transform: scale(0.95);
          transform: scale(0.95);
}
.category-scroll .category-list .category-item .category-name {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}
.content-scroll {
  flex: 1;
  height: 0;
  padding: 20rpx;
  box-sizing: border-box;
}
.food-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding-bottom: 120rpx;
}
.food-grid .food-item {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: -webkit-transform 0.3s ease;
  transition: transform 0.3s ease;
  transition: transform 0.3s ease, -webkit-transform 0.3s ease;
}
.food-grid .food-item:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
}
.food-grid .food-item .food-image {
  width: 100%;
  height: 320rpx;
}
.food-grid .food-item .food-info {
  padding: 16rpx;
}
.food-grid .food-item .food-info .food-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.food-grid .food-item .food-info .food-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.food-grid .food-item .food-info .food-meta .author {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}
.food-grid .food-item .food-info .food-meta .author .avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 8rpx;
  flex-shrink: 0;
}
.food-grid .food-item .food-info .food-meta .author .nickname {
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 120rpx;
}
.food-grid .food-item .food-info .food-meta .stats {
  flex-shrink: 0;
}
.food-grid .food-item .food-info .food-meta .stats .likes {
  font-size: 24rpx;
  color: #999;
}

