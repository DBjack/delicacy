<view class="container"><view class="user-header"><view class="bg-wrap"><image class="bg-image" src="{{userInfo.bgImage||defaultBg}}" mode="aspectFill"></image><view class="bg-mask"></view></view><view class="user-info"><view data-event-opts="{{[['tap',[['editProfile',['$event']]]]]}}" class="avatar-wrap" bindtap="__e"><image class="avatar" src="{{userInfo.avatar||defaultAvatar}}" mode="aspectFill"></image><view class="edit-badge"><text class="iconfont icon-edit"></text></view></view><block wx:if="{{isLogin}}"><view class="info-content"><text class="nickname">{{userInfo.nickname||"美食达人"}}</text><text class="signature">{{userInfo.signature||"这个人很懒，什么都没写~"}}</text></view></block><block wx:else><view data-event-opts="{{[['tap',[['goToLogin',['$event']]]]]}}" class="login-btn" bindtap="__e"><text>登录/注册</text></view></block></view><view class="user-stats"><view data-event-opts="{{[['tap',[['goToMyPosts',['$event']]]]]}}" class="stat-item" bindtap="__e"><text class="count">{{userStats.postCount||0}}</text><text class="label">发布</text></view><view data-event-opts="{{[['tap',[['goToFollowing',['$event']]]]]}}" class="stat-item" bindtap="__e"><text class="count">{{userStats.followingCount||0}}</text><text class="label">关注</text></view><view data-event-opts="{{[['tap',[['goToFollowers',['$event']]]]]}}" class="stat-item" bindtap="__e"><text class="count">{{userStats.followerCount||0}}</text><text class="label">粉丝</text></view><view data-event-opts="{{[['tap',[['goToLikes',['$event']]]]]}}" class="stat-item" bindtap="__e"><text class="count">{{userStats.likeCount||0}}</text><text class="label">获赞</text></view></view></view><view class="menu-section"><view class="menu-group"><view data-event-opts="{{[['tap',[['goToMyPosts',['$event']]]]]}}" class="menu-item" bindtap="__e"><view class="icon-wrap"><text class="iconfont icon-post"></text></view><text class="title">我的发布</text><text class="iconfont icon-arrow"></text></view><view data-event-opts="{{[['tap',[['goToCollections',['$event']]]]]}}" class="menu-item" bindtap="__e"><view class="icon-wrap"><text class="iconfont icon-star"></text></view><text class="title">我的收藏</text><text class="iconfont icon-arrow"></text></view><view data-event-opts="{{[['tap',[['goToDrafts',['$event']]]]]}}" class="menu-item" bindtap="__e"><view class="icon-wrap"><text class="iconfont icon-draft"></text></view><text class="title">草稿箱</text><text class="iconfont icon-arrow"></text></view></view><view class="menu-group"><view data-event-opts="{{[['tap',[['goToSettings',['$event']]]]]}}" class="menu-item" bindtap="__e"><view class="icon-wrap"><text class="iconfont icon-settings"></text></view><text class="title">设置</text><text class="iconfont icon-arrow"></text></view><view data-event-opts="{{[['tap',[['contactUs',['$event']]]]]}}" class="menu-item" bindtap="__e"><view class="icon-wrap"><text class="iconfont icon-service"></text></view><text class="title">联系我们</text><text class="iconfont icon-arrow"></text></view><view data-event-opts="{{[['tap',[['showAbout',['$event']]]]]}}" class="menu-item" bindtap="__e"><view class="icon-wrap"><text class="iconfont icon-about"></text></view><text class="title">关于我们</text><text class="iconfont icon-arrow"></text></view></view></view></view>