.container {
  min-height: 100vh;
  background: #f8f8f8;
}
.user-header {
  position: relative;
  padding-bottom: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}
.user-header .bg-wrap {
  position: relative;
  height: 360rpx;
  overflow: hidden;
}
.user-header .bg-wrap .bg-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(215deg, #ff6b6b, #ff8e8e, #ffd3d3);
}
.user-header .bg-wrap .bg-gradient::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 70% 30%, rgba(255, 255, 255, 0.2) 0%, transparent 60%);
}
.user-header .bg-wrap .bg-mask {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  height: 160rpx;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.3));
}
.user-header .user-info {
  position: relative;
  margin-top: -80rpx;
  padding: 0 30rpx;
  z-index: 1;
}
.user-header .user-info .avatar-wrap {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}
.user-header .user-info .avatar-wrap .avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 6rpx solid #fff;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}
.user-header .user-info .avatar-wrap .edit-badge {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 48rpx;
  height: 48rpx;
  background: #ff6b6b;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #fff;
}
.user-header .user-info .avatar-wrap .edit-badge .icon-edit {
  color: #fff;
  font-size: 24rpx;
}
.user-header .user-info .info-content .nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}
.user-header .user-info .info-content .signature {
  font-size: 28rpx;
  color: #666;
}
.user-header .user-info .login-btn {
  display: inline-block;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  padding: 20rpx 0;
}
.user-header .user-stats {
  display: flex;
  padding: 30rpx;
  padding-bottom: 0;
}
.user-header .user-stats .stat-item {
  flex: 1;
  text-align: center;
}
.user-header .user-stats .stat-item .count {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 4rpx;
  display: block;
}
.user-header .user-stats .stat-item .label {
  font-size: 24rpx;
  color: #666;
}
.menu-list {
  background: #fff;
  margin-bottom: 20rpx;
}
.menu-list .menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.menu-list .menu-item:last-child {
  border-bottom: none;
}
.menu-list .menu-item .iconfont {
  font-size: 40rpx;
  color: #666;
  margin-right: 20rpx;
}
.menu-list .menu-item .iconfont.icon-arrow-right {
  margin-right: 0;
  margin-left: auto;
  font-size: 32rpx;
  color: #999;
}
.menu-list .menu-item .title {
  font-size: 30rpx;
  color: #333;
}
.edit-btn .iconfont {
  font-size: 24rpx;
  color: #fff;
}
.menu-item .left .iconfont {
  font-size: 32rpx;
  color: #666;
  margin-right: 20rpx;
}
.menu-item .iconfont.icon-right {
  font-size: 24rpx;
  color: #999;
}

