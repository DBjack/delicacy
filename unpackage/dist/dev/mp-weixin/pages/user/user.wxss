.container {
  padding: 20rpx;
}
.user-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
.user-card .user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.user-card .user-info .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.user-card .user-info .info {
  flex: 1;
}
.user-card .user-info .info .nickname {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}
.user-card .user-info .info .bio {
  font-size: 24rpx;
  color: #999;
}
.user-card .stats {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}
.user-card .stats .stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user-card .stats .stat-item .count {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}
.user-card .stats .stat-item .label {
  font-size: 24rpx;
  color: #999;
}
.user-card .follow-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #ff6b6b;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.user-card .follow-btn.following {
  background: #999;
}
.user-card .follow-btn::after {
  border: none;
}
.post-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}
.post-list .post-item {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
}
.post-list .post-item .cover {
  width: 100%;
  height: 300rpx;
}
.post-list .post-item .title {
  font-size: 28rpx;
  padding: 16rpx;
  display: block;
}
.post-list .post-item .stats {
  padding: 0 16rpx 16rpx;
  display: flex;
}
.post-list .post-item .stats .stat {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}
.post-list .post-item .stats .stat:last-child {
  margin-right: 0;
}

