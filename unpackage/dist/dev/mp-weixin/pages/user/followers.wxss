.container {
  padding: 30rpx;
}
.user-list .user-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}
.user-list .user-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.user-list .user-item .info {
  flex: 1;
}
.user-list .user-item .info .nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}
.user-list .user-item .info .bio {
  font-size: 24rpx;
  color: #999;
}
.user-list .user-item .follow-btn {
  width: 120rpx;
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  color: #fff;
  background: #ff6b6b;
  border-radius: 26rpx;
  padding: 0;
}
.user-list .user-item .follow-btn.following {
  background: #999;
}
.user-list .user-item .follow-btn::after {
  border: none;
}
.empty {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

