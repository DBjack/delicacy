<view class="container"><view class="form"><view class="form-item"><text class="label">头像</text><view data-event-opts="{{[['tap',[['chooseAvatar',['$event']]]]]}}" class="avatar-wrapper" bindtap="__e"><image class="avatar" src="{{formData.avatar||defaultAvatar}}" mode="aspectFill"></image><text class="tip">点击更换头像</text></view></view><view class="form-item"><text class="label">昵称</text><input class="input" type="text" placeholder="请输入昵称" data-event-opts="{{[['input',[['__set_model',['$0','nickname','$event',[]],['formData']]]]]}}" value="{{formData.nickname}}" bindinput="__e"/></view><view class="form-item"><text class="label">个性签名</text><textarea class="textarea" placeholder="介绍一下自己吧" maxlength="100" data-event-opts="{{[['input',[['__set_model',['$0','bio','$event',[]],['formData']]]]]}}" value="{{formData.bio}}" bindinput="__e"></textarea><text class="count">{{$root.g0+"/100"}}</text></view><view class="form-item"><text class="label">标签</text><view class="tags"><block wx:for="{{$root.l0}}" wx:for-item="tag" wx:for-index="__i0__" wx:key="value"><view data-event-opts="{{[['tap',[['toggleTag',['$0'],[[['tagOptions','value',tag.$orig.value,'value']]]]]]]}}" class="{{['tag',(tag.g1)?'active':'']}}" bindtap="__e">{{''+tag.$orig.label+''}}</view></block></view></view></view><button data-event-opts="{{[['tap',[['handleSubmit',['$event']]]]]}}" class="submit-btn" bindtap="__e">保存</button></view>