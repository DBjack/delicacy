.container {
  padding: 30rpx;
}
.form {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}
.form .form-item {
  margin-bottom: 40rpx;
  position: relative;
}
.form .form-item:last-child {
  margin-bottom: 0;
}
.form .form-item .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
.form .form-item .avatar-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.form .form-item .avatar-wrapper .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
}
.form .form-item .avatar-wrapper .tip {
  font-size: 24rpx;
  color: #999;
}
.form .form-item .input {
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
}
.form .form-item .textarea {
  width: 100%;
  height: 200rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
}
.form .form-item .count {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  font-size: 24rpx;
  color: #999;
}
.form .form-item .tags {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}
.form .form-item .tags .tag {
  margin: 10rpx;
  padding: 16rpx 32rpx;
  background: #f8f8f8;
  border-radius: 32rpx;
  font-size: 26rpx;
  color: #666;
}
.form .form-item .tags .tag.active {
  background: rgba(255, 107, 107, 0.1);
  color: #ff6b6b;
}
.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ff6b6b;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 60rpx;
}
.submit-btn::after {
  border: none;
}

