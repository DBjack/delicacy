.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 20rpx;
}
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}
.empty .empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.empty .empty-icon .iconfont {
  font-size: 120rpx;
  color: #ddd;
}
.empty text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}
.empty .create-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #ff6b6b;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}
.draft-list .draft-item {
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  display: flex;
  gap: 20rpx;
}
.draft-list .draft-item .content {
  flex: 1;
  min-width: 0;
}
.draft-list .draft-item .content .title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.draft-list .draft-item .content .description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.draft-list .draft-item .content .info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.draft-list .draft-item .content .info text {
  font-size: 24rpx;
  color: #999;
}
.draft-list .draft-item .cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.draft-list .draft-item .cover image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.draft-list .draft-item .actions {
  position: absolute;
  right: 24rpx;
  bottom: 24rpx;
  display: flex;
  gap: 16rpx;
}
.draft-list .draft-item .actions .action-btn {
  min-width: auto;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 24rpx;
  border-radius: 28rpx;
  font-size: 26rpx;
}
.draft-list .draft-item .actions .action-btn::after {
  border: none;
}
.draft-list .draft-item .actions .action-btn.delete {
  background: #f8f8f8;
  color: #999;
}
.draft-list .draft-item .actions .action-btn.publish {
  background: #ff6b6b;
  color: #fff;
}
.draft-list .draft-item .actions .action-btn .iconfont {
  font-size: 28rpx;
}

