<view class="edit-profile"><view data-event-opts="{{[['tap',[['chooseAvatar',['$event']]]]]}}" class="avatar-section" bindtap="__e"><image class="avatar" src="{{userInfo.avatar||defaultAvatar}}" mode="aspectFill"></image><text class="tip">点击更换头像</text></view><view class="form-section"><view class="form-item"><text class="label">昵称</text><input type="text" placeholder="请输入昵称" data-event-opts="{{[['input',[['__set_model',['$0','nickname','$event',[]],['userInfo']]]]]}}" value="{{userInfo.nickname}}" bindinput="__e"/></view><view class="form-item"><text class="label">个性签名</text><input type="text" placeholder="请输入个性签名" data-event-opts="{{[['input',[['__set_model',['$0','signature','$event',[]],['userInfo']]]]]}}" value="{{userInfo.signature}}" bindinput="__e"/></view></view><button data-event-opts="{{[['tap',[['saveProfile',['$event']]]]]}}" class="save-btn" bindtap="__e">保存</button></view>